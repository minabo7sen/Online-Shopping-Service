<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shopping</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/font-awesome.css" />
</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-sm fixed-top">
        <a class="navbar-brand text-light ml-5" href="~/Home">
            <span alt="">
                <img src="~/Content/shopping-bag.svg" width="38" height="38" />
            </span>
            Online Shopping System
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMob" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMob">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home">Home <span class="fa fa-2x fa-home"></span></a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admins"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Item/">System Management<span class="fa fa-2x fa-magic"></span></a>
                        </li>
                    }
                    else
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="~/Shopping/">Check Available Products <span class="fa fa-2x fa-shopping-bag"></span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/Shopping/MyCart">My Cart <span class="fa fa-2x fa-shopping-cart"></span></a>
                        </li>
                    }
                }
            </ul>

            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>*@

            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <br />
    <div class="container body-content">
        <br />
        <br />
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Online Shopping Service</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>